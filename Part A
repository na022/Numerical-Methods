import numpy as np
import matplotlib.pyplot as plt

# Define the PDF function
def generate_pdf(x, λ, μ):
    return np.sqrt(λ / (2 * np.pi * x**3)) * np.exp(-λ / (2 * μ**2 * x) * (x - μ)**2)

# Define the parameter combinations
parameters = [(0.5, 1), (1, 3), (5, 1), (10, 3)]
colors = ['b', 'g', 'r', 'c']
labels = [f'(λ={λ}, μ={μ})' for λ, μ in parameters]

# Generate x values from 0 to 5 (excluding 0 to avoid division by zero)
x = np.linspace(0.01, 5, 1000)

# Plot the PDFs
plt.figure(figsize=(10, 6))

for (λ, μ), color, label in zip(parameters, colors, labels):
    pdf = generate_pdf(x, λ, μ)
    plt.plot(x, pdf, color, label=label)

# Add labels and legend
plt.xlabel('x', fontsize=16)
plt.title('PDF on [0, 5]',fontsize=18,fontweight= 'bold' )
plt.xticks(fontsize=14)
plt.legend()
plt.grid(True,linewidth=1.5,linestyle=':')

# Show the plot
plt.show()
